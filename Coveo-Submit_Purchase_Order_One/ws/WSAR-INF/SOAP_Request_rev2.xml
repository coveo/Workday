<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"

xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	
  <xsl:param name="snow_num"/>
  <xsl:param name="company"/>
  <xsl:param name="supplier_id"/>
  <xsl:param name="payment_terms"/>
  <xsl:param name="currency"/>
  <xsl:param name="po_issue_option"/>
  <xsl:param name="employee_id"/>
  <xsl:param name="bill_to_address"/>
  <xsl:param name="unit_cost"/>
  <xsl:param name="manufacturer"/>
  <xsl:param name="description"/>
  <xsl:param name="item"/>
  <xsl:param name="supplier_category"/>
  <xsl:param name="company_restrictions"/>
  <xsl:param name="spend_category"/>
  <xsl:param name="document_date"/>

<xsl:template match="/">
<env:Envelope
    xmlns:env="http://schemas.xmlsoap.org/soap/envelope/"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <env:Body>
        <wd:Submit_Purchase_Order_Request
            xmlns:wd="urn:com.workday/bsvc"
            wd:Add_Only="false"
            wd:version="v38.0">    
            <wd:Business_Process_Parameters>
                <wd:Auto_Complete>false</wd:Auto_Complete>
            </wd:Business_Process_Parameters>
            <wd:Purchase_Order_Data>
                <wd:Submit>false</wd:Submit>
                <wd:Locked_in_Workday>false</wd:Locked_in_Workday>
                <wd:Invoice_Status_Reference>
                    <wd:ID wd:type="Document_Status_ID"><xsl:value-of select="$snow_num"/></wd:ID>
                </wd:Invoice_Status_Reference>
                <wd:Company_Reference>
                    <wd:ID wd:type="Company_Reference_ID"><xsl:value-of select="$company"/></wd:ID>
                </wd:Company_Reference>
                <wd:Supplier_Reference>
                    <wd:ID wd:type="Supplier_ID"><xsl:value-of select="$supplier_id"/></wd:ID>
                </wd:Supplier_Reference>
                <wd:Payment_Terms_Reference>
                    <wd:ID wd:type="Payment_Terms_ID"><xsl:value-of select="$payment_terms"/></wd:ID>
                </wd:Payment_Terms_Reference>
                <wd:Currency_Reference>
                    <wd:ID wd:type="Currency_ID"><xsl:value-of select="$currency"/></wd:ID>
                </wd:Currency_Reference>
                <wd:Issue_Option_Reference>
                    <wd:ID wd:type="Purchase_Order_Issue_Option_ID"><xsl:value-of select="$po_issue_option"/></wd:ID>
                </wd:Issue_Option_Reference>
                <wd:Buyer_Reference>
                    <wd:ID wd:type="Employee_ID"><xsl:value-of select="$employee_id"/></wd:ID>
                </wd:Buyer_Reference>
                <wd:Bill_To_Contact_Reference>
                    <wd:ID wd:type="Contingent_Worker_ID"><xsl:value-of select="$employee_id"/></wd:ID>
                </wd:Bill_To_Contact_Reference>
                <wd:Bill_To_Address_Data>
                    <wd:Bill_To_Address_Reference>
                        <wd:ID wd:type="IID"><xsl:value-of select="$bill_to_address"/></wd:ID>
                    </wd:Bill_To_Address_Reference>
                </wd:Bill_To_Address_Data>
                <wd:Ship_To_Contact_Reference>
                    <wd:ID wd:type="Contingent_Worker_ID"><xsl:value-of select="$employee_id"/></wd:ID>
                </wd:Ship_To_Contact_Reference>
                <wd:Ship_To_Address_Data>
                    <wd:Ship_To_Address_Reference>
                        <wd:ID wd:type="IID"><xsl:value-of select="$bill_to_address"/></wd:ID>
                    </wd:Ship_To_Address_Reference>
                </wd:Ship_To_Address_Data>
                <wd:Internal_Memo><xsl:value-of select="$snow_num"/></wd:Internal_Memo>
                <wd:Prepaid>false</wd:Prepaid>
                <wd:Goods_Line_Replacement_Data>
                    <wd:Item_Reference>
                        <wd:ID wd:type="Catalog_Item_ID"><xsl:value-of select="$item"/></wd:ID>
                    </wd:Item_Reference>
                    <wd:Line_Company_Reference>
                <wd:ID wd:type="Company_Reference_ID"><xsl:value-of select="$company_restrictions"/></wd:ID>
                    </wd:Line_Company_Reference>
                <wd:Item_Description><xsl:value-of select="$description"/></wd:Item_Description>
                    <wd:Resource_Category_Reference>
                    <wd:ID wd:type="Spend_Category_ID"><xsl:value-of select="$spend_category"/></wd:ID>
                    </wd:Resource_Category_Reference>
                    <wd:Unit_Cost><xsl:value-of select="$unit_cost"/></wd:Unit_Cost>      
                        <wd:Manufacturer_Reference>
                       <wd:ID wd:type="Manufacturer_Name"><xsl:value-of select="$manufacturer"/></wd:ID>
                        </wd:Manufacturer_Reference>
                </wd:Goods_Line_Replacement_Data>
            </wd:Purchase_Order_Data>
        </wd:Submit_Purchase_Order_Request>
    </env:Body>
</env:Envelope>
</xsl:template>
</xsl:stylesheet>